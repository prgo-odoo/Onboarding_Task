<odoo>
    <record id="view_other_certification_tree" model="ir.ui.view">
        <field name="name">other.certification.tree</field>
        <field name="model">other.certification</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="other_certification_action" model="ir.actions.act_window">
        <field name="name">Other Certification</field>
        <field name="res_model">other.certification</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_other_certification" name="Certification" parent="menu_configuration_vendor" action="other_certification_action"/>
</odoo>
