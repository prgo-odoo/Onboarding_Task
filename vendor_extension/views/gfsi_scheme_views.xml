<odoo>
    <record id="view_gfsi_scheme_tree" model="ir.ui.view">
        <field name="name">gfsi.scheme.tree</field>
        <field name="model">gfsi.scheme</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="gfsi_scheme_action" model="ir.actions.act_window">
        <field name="name">GFSI Scheme</field>
        <field name="res_model">gfsi.scheme</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_gfsi_scheme" name="GFSI Scheme" parent="menu_configuration_vendor" action="gfsi_scheme_action"/>
</odoo>
